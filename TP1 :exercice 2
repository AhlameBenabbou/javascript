  <button onclick="validerEmail()">V√©rifier</button>

  <div class="message" id="message"></div>

  <script>
    function validerEmail() {
      let email = document.getElementById('email').value;
      let message = document.getElementById('message');

    
      if (email === '') {
        afficherMessage('Veuillez entrer un email', false);
        return;
      }

      if (!email.includes('@')) {
        afficherMessage('L\'email doit contenir @', false);
        return;
      }

      let parties = email.split('@');
      let avant = parties[0];
      let apres = parties[1];

      if (avant.length === 0) {
        afficherMessage('Il doit y avoir au moins 1 caract√®re avant @', false);
        return;
      }

     
      if (!apres || apres.length === 0) {
        afficherMessage('Il doit y avoir quelque chose apr√®s @', false);
        return;
      }

     
      if (!apres.includes('.')) {
        afficherMessage('Il doit y avoir un point (.) apr√®s @', false);
        return;
      }

    
      let position = apres.lastIndexOf('.');
      let extension = apres.substring(position + 1);
      if (extension.length < 2) {
        afficherMessage('Il doit y avoir au moins 2 caract√®res apr√®s le point', false);
        return;
      }

      afficherMessage('‚úì Email valide !', true);
    }

    function afficherMessage(texte, valide) {
      let message = document.getElementById('message');
      message.textContent = texte;
      message.className = 'message ' + (valide ? 'valide' : 'invalide');
      message.style.display = 'block';
    }
  </script>

